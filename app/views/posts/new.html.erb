<div class="login-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Create a Post</h2>
          </div>
          <%= simple_form_for @post, html: { class: 'form-horizontal', multipart: true } do |f| %>
            <div class="panel-body">
              <%= f.input :image, label: false %><br>
              <P>Add a caption!</p>
                  <p>Don't forget to tag a restaurant <br> Ex: Something nice @Dada's</p>
              <%= f.input :caption, label: false, input_html: { class: 'form-control' }%><br>
              <%= f.button :submit, "Post", class: 'btn-lg btn-success btn-block' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
