<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="container">
  <h1>Trending at Foodie!</h1>
  <p>Below are the most liked posts!</p>
<div class="posts-wrapper row">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="post-head">
        <div class="thumb-img"></div>
        <div class="user-name">
          <%= link_to post.user.user_name, profile_path(post.user.user_name) %> <i class="fa fa-comments fa-lg"></i> <%= post.caption %>
        </div>
      </div>
      <div class="image center-block">
        <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
      </div>
      <div class="post-bottom">
        <% if post.comments %>
          <% post.comments.each do |comment| %>
            <div class="comment">
              <div class="user-name">
                <%= comment.user.user_name %>
              </div>
              <div class="comment-content">
                <%= comment.content %>
              </div>
              <% if comment.user == current_user %>
                <%= link_to "Delete Comment", post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } %>
              <% end %>
            </div>
          <% end %>
        <% end %>
        <div class="comment-form">
          <%= form_for [post, post.comments.new] do |f| %>
            <%= f.text_field :content, placeholder: 'Add a comment...' %>
            <%= f.button :submit, class: "btn-xs btn btn-success"  %>
            <%= link_to "Like", like_post_path(post), class: "btn-xs btn btn-info", method: :put %>
            <%= post.votes_for.size %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
</div>
