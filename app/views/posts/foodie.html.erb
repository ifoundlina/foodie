<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class="container">
  <table class="table_class">

    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.user_name %></td>
          <td class="mini_button_blue"><%= link_to 'Details', post %></td>
          <td class="mini_button_blue"><%= link_to 'Edit', edit_post_path(post) %></td>
          <td class="mini_button_blue"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
